{
  "root": true,
  "parser": "@babel/eslint-parser",
  "parserOptions": {
    "requireConfigFile": false,
    "babelOptions": {
      "presets": ["@babel/preset-react"]
    }
  },
  "extends": [
    "react-app",
    "react-app/jest"
  ],
  "overrides": [
    {
      "files": ["apps/client/src/**/*.{js,jsx,ts,tsx}"],
      "rules": {
        "no-unused-vars": "warn",
        "react/prop-types": "warn"
      }
    }
  ]
}
